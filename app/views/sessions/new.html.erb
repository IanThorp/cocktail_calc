<div class="container">
  <div class="wrapper col-lg-4 col-lg-offset-4">
    <%= form_tag 'login', class: "form-signin" do %>
      <h3 class="form-signin-heading text-center">Welcome! Please Sign In</h3>
      <hr class="colorgraph"><br>
      <%= email_field_tag(:email, "" ,class: "form-control", placeholder: "Email") %>
      <%= password_field_tag(:password, "" ,class: "form-control", placeholder: "Password") %>
      <%= submit_tag("Login", class: "btn btn-lg btn-primary btn-block")%>
    <%end%>
  </div>
</div>

