

<div class="container">
  <div class="wrapper col-lg-4 col-lg-offset-4">
    <%= form_for :user, url: '/users', class: "form-signin" do |f| %>
      <h3 class="form-signin-heading text-center">Join The Community!</h3>
      <hr class="colorgraph"><br>
      <%= f.text_field(:email, class: "form-control" , placeholder: "Email") %>
      <%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
      <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "Password Confirm" )%>
      <%= submit_tag("Sign Up", class: "btn btn-lg btn-primary btn-block")%>
    <%end%>
  </div>
</div>